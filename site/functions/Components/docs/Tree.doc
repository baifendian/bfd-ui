 */
import Tree from 'bfd/Tree'

const TreeDynamic = () => {
  const data = [{
    pid: 0,
    name: '数据工厂',
    isParent: true
  }, {
    pid: 1,
    name: '配置中心',
    isParent: true
  }]
  return (
    <Tree 
      defaultData={data} 
      getUrl={item => '/data/tree-children.json?pid=' + item.pid} 
    />
  )
}

